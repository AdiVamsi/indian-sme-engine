generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  OWNER
  STAFF
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  WON
  LOST
}

enum AppointmentStatus {
  NEW
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Business {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  phone     String?
  email     String?
  address   String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users         User[]
  leads         Lead[]
  services      Service[]
  testimonials  Testimonial[]
  appointments  Appointment[]
}

model User {
  id           String   @id @default(cuid())

  businessId   String
  business     Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  name         String
  email        String
  passwordHash String
  role         UserRole @default(OWNER)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([businessId, email])
}

model Lead {
  id         String     @id @default(cuid())

  businessId String
  business   Business   @relation(fields: [businessId], references: [id], onDelete: Cascade)

  name       String
  phone      String
  email      String?
  message    String?
  status     LeadStatus @default(NEW)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Service {
  id          String   @id @default(cuid())

  businessId  String
  business    Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  title       String
  description String
  priceInr    Int?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Testimonial {
  id           String   @id @default(cuid())

  businessId   String
  business     Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  customerName String
  text         String
  rating       Int?

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Appointment {
  id           String            @id @default(cuid())

  businessId   String
  business     Business          @relation(fields: [businessId], references: [id], onDelete: Cascade)

  customerName String
  phone        String
  scheduledAt  DateTime
  notes        String?
  status       AppointmentStatus @default(NEW)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}